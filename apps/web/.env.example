# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_JWT_KID=your_jwt_kid_here
CLERK_JWT_ISSUER=your_jwt_issuer_here

# Optional: Clerk redirect URLs (if you want to customize the sign-in/sign-up flow)
# NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
# NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
# NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/jobs
# NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/jobs 

# GraphQL API Endpoints
# Development
NEXT_PUBLIC_GRAPHQL_HTTP_ENDPOINT=http://localhost:4000/graphql
NEXT_PUBLIC_GRAPHQL_WS_ENDPOINT=ws://localhost:4000/graphql

# Production (example)
# NEXT_PUBLIC_GRAPHQL_HTTP_ENDPOINT=https://api.yourdomain.com/graphql
# NEXT_PUBLIC_GRAPHQL_WS_ENDPOINT=wss://api.yourdomain.com/graphql

# Staging (example)
# NEXT_PUBLIC_GRAPHQL_HTTP_ENDPOINT=https://staging-api.yourdomain.com/graphql
# NEXT_PUBLIC_GRAPHQL_WS_ENDPOINT=wss://staging-api.yourdomain.com/graphql
