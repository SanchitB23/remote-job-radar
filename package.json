{
  "name": "remote-job-radar",
  "version": "1.0.0",
  "main": "index.js",
  "packageManager": "npm@10.0.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo run build --parallel",
    "lint": "turbo run lint --parallel",
    "test": "turbo run test --parallel",
    "dev:infra": "docker compose -f infra/docker-compose.yml up -d db embedder",
    "dev:all": "npm run dev:infra && npm run dev",
    "dev:smokeTest": "echo '--- DB row count ---' && docker exec -it remote-job-radar-db-1 psql -U postgres -c \"SELECT COUNT(*) FROM jobs;\" && echo '\n--- Aggregator health ---' && (curl -s http://localhost:8001/health || echo 'Aggregator not running') && echo '\n--- GraphQL query ---' && (curl -s -X GET http://localhost:4000/health -H 'Content-Type: application/json' || echo 'GraphQL not reachable') && echo '\n--- Web app HEAD ---' && (curl -I -s http://localhost:3000 | head -n 1 || echo 'Web not reachable')",
    "prepare": "husky || true",
    "precommit:fast": "lint-staged",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "typecheck": "turbo run typecheck --parallel",
    "db:migrate": "npm run db:migrate --workspace=apps/api --force"
  },
  "workspaces": [
    "apps/*",
    "services/*"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@dnd-kit/sortable": "^10.0.0",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.1.1",
    "lodash": "^4.17.21"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  }
}
