
# --- Server ---
PORT=8001

# --- Database ---
PG_DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=disable  # Set your DB connection string

# --- External services ---
EMBEDDER_BASE_URL=http://localhost:1234  # URL to embedder service

# --- Job Sources ---
REMOTIVE_BASE_URL=https://remotive.com  # or leave blank for default
ADZUNA_BASE_URL=https://api.adzuna.com  # or leave blank for default
ADZUNA_APP_ID=your_adzuna_app_id_here
ADZUNA_APP_KEY=your_adzuna_app_key_here
FETCHER_MAX_PAGE_NUM=10

# --- Skills ---
SKILLS_FILE=skills.yml  # Path to your skills config

# --- Scheduling ---
FETCH_INTERVAL=2h
SCORE_INTERVAL=4h
FETCH_TIMEOUT=5m
RUN_INITIAL_FETCH=false

# --- Embedder Configuration ---
EMBEDDER_MAX_RETRIES=10
EMBEDDER_BASE_DELAY=45s
EMBEDDER_MAX_DELAY=120s
EMBEDDER_REQUEST_TIMEOUT=3m
EMBEDDER_CLIENT_TIMEOUT=5m
EMBEDDER_MAX_TEXT_LENGTH=10000
EMBEDDER_WORKER_COUNT=5

# --- Environment ---
ENV=local

# --- Logging ---
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
